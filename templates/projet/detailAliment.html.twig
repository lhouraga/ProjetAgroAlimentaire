{% extends 'base.html.twig' %}
{% form_theme formulaireDetail 'bootstrap_4_layout.html.twig' %}
{% block body %}


<section id="about" class="about-mf sect-pt4 route">
    
    <div id="contact" class="box-shadow-full">
                <div class="title-box-2">
                    <h5 class="title-left">
                      Détail du lot
                    </h5>
                </div>
                {{ form_start(formulaireDetail)}}
                  {{ form_row(formulaireDetail.lot, {'attr':{'placeholder':"Entrée le nom de la société"}})}}
                  {{ form_row(formulaireDetail.TypeAliment)}}
                  {{ form_row(formulaireDetail.NomAliment, {'attr':{'placeholder':"Entrée le numéro du fournisseur"}})}}
                  {{ form_row(formulaireDetail.PrixUnitaire, {'attr':{'placeholder':"Adresse: 9 rue les reines"}})}}
                  {{ form_row(formulaireDetail.QteRecu, {'attr':{'placeholder':"91220"}})}}
                  {{ form_row(formulaireDetail.DatePeremption)}}

                  <button type="button" class="btn btn-primary">Enregistrer</button>
                {{ form_end(formulaireDetail)}}
    </div>
</section>

{% endblock %}
