{% extends 'base.html.twig' %}

{% block body %}
<div class="container mt-4">
<h3> Détail du Lot {{idLot}} provenant du fournisseur {{ fournisseur.societe}} </h3>
<div class="row">
<div class="col-md-8">
<table class="table table-striped">
<thead>
<tr>
    <th> Aliment</th>
    <th>Quantité Récue (kg)</th>
    <th>Quantité Disponible (kg)</th>
    <th>Prix Unitaire</th>
    <th>Date de péremption</th>
</tr>
</thead>
<tbody>
  
 {%   for detail in details %}
   <tr>
       
      
       <td>{{ detail.NomAliment}} </td>
       <td>{{ detail.QteRecu}} </td>
       <td>{{ detail.QteDispo}} </td>
       <td>{{ detail.PrixUnitaire}} </td>
       <td>{{ detail.DatePeremption |date('d/m/Y')}} </td> 
       
   
  </tr>
  {% endfor %}
</tbody>
</table> 

<div class="float-right">
          <form method="post" action="{{path('ListeLot')}}"  >
             <button class="btn btn-success"> OK </button>
          </form>
          </div>
 </div>
<div class="col-md-4">
<img src="{{asset('img/legume.jpg')}}" width="450" heigth="450">
</div>
 </div> 
</div>

{% endblock %}