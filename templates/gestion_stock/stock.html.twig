{% extends 'base.html.twig' %}

{% block body %}

<div class="container mt-4">
<h1> Stock </h1>
<div class="row">
<div class="col-md-8">
<table class="table table-striped">
<thead>
<tr>
    <th> Aliment</th>
    <th>Quantité  disponible</th>
    <th>Date de péremption</th>
</tr>
</thead>
<tbody>
  
 {%   for aliment in aliments %}
   <tr> 
      <td>{{ aliment.NomAliment}} </td>
       <td>{{ aliment.QteDispo}} </td>
